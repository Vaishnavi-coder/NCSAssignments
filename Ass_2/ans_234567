//Sal//


<script>

function Salary(basic)
{
	
	const ta, da, pf;
	
	ta = 0.2 * basic;
	da = 0.5 * basic;
	pf = 0.11 * basic;
	
	let gross;
	
	gross = Math.round(basic + ta + da +pf);
							
	return gross;
}
	let basic = 10000;
	document.write(Salary(basic));
	
</script>


